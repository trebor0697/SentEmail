<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SentEmail.Views.HomePage"
             xmlns:controls="clr-namespace:SentEmail.Controls"
             xmlns:vm ="clr-namespace:SentEmail.ViewModels"
             x:Name="homePage"
            >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddCommand}"/>
    </ContentPage.ToolbarItems>
    <ListView ItemsSource="{Binding Emails}" 
              HasUnevenRows="True"
              SeparatorColor="Black"
              Margin="20"
              Footer="">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <controls:ItemView/>
                    <ViewCell.ContextActions>
                        <MenuItem Text="More" Command="{Binding Source={x:Reference homePage}, Path=BindingContext.MoreCommand}" CommandParameter="{Binding}"/>
                        <MenuItem Text="Delete" Command="{Binding Source={x:Reference homePage}, Path=BindingContext.DeleteCommand}" CommandParameter="{Binding}"/>
                    </ViewCell.ContextActions>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>